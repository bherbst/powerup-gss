                <VBox fx:id="scaleNear" prefHeight="200.0" prefWidth="100.0" styleClass="default-box" GridPane.columnIndex="4" GridPane.rowIndex="3" />
                <VBox fx:id="redSwitchFar" prefHeight="200.0" prefWidth="100.0" styleClass="default-box" GridPane.columnIndex="6" GridPane.rowIndex="1" />
                <VBox fx:id="redSwitchNear" prefHeight="200.0" prefWidth="100.0" styleClass="default-box" GridPane.columnIndex="6" GridPane.rowIndex="3" />
