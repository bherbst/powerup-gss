                    <Label text="Red" textFill="WHITE" />
                </VBox>
                <VBox alignment="CENTER" styleClass="blue-alliance-box" GridPane.rowIndex="1" GridPane.rowSpan="3">
                    <Label text="Blue" textFill="WHITE" />
                </VBox>
                <HBox style="-fx-background-color: #333333" alignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="5" GridPane.columnIndex="3">
                    <Label text="Scoring table" textFill="WHITE" />
                </HBox>
                <VBox fx:id="blueSwitchFar" prefHeight="200.0" prefWidth="100.0" styleClass="default-box" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <VBox fx:id="blueSwitchNear" prefHeight="200.0" prefWidth="100.0" styleClass="default-box" GridPane.columnIndex="2" GridPane.rowIndex="3" />
